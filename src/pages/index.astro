---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting.jsx";
const pageTitle = "Home Page";
---

<BaseLayout pageTitle={pageTitle}>
  {
    /* The client:load directive tells Astro to send and rerun the JS on the client when
    the page loads. This is known as a hydrated component. */
  }
  <Greeting
    client:load
    messages={["Hej", "Hallo", "Hola", "Habari", "Hello", "Konnichiwa"]}
  />
</BaseLayout>
